<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BellyCare.Shells.LoginShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BellyCare.Views"
    xmlns:utils="clr-namespace:Barreto.Exe.Maui.Utils;assembly=Barreto.Exe.Maui"
    Title="BellyCare"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Iniciar SesiÃ³n"
            ContentTemplate="{DataTemplate local:LoginView}"
            Route="LoginView">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="IconFont"
                    Glyph="{x:Static utils:IconFont.Start}"
                    Color="Gray" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Registrarse"
